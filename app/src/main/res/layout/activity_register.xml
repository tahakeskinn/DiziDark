<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:background="#101010">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e2f41">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üyelik Başlat"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/closeicon"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:onClick="exitBtn"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="isim"
            android:inputType="text"
            android:textSize="20dp"
            android:background="#333242"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textColorHint="#8c8c98"
            android:textColor="#ffffff"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/surnameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Soyad"
            android:inputType="text"
            android:textSize="20dp"
            android:background="#333242"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:textColorHint="#8c8c98"
            android:textColor="#ffffff"
            android:layout_weight="1"/>

    </LinearLayout>

    <EditText
        android:id="@+id/nicknameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı Adı"
        android:inputType="text"
        android:textSize="20dp"
        android:background="#333242"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColorHint="#8c8c98"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-posta"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:background="#333242"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColorHint="#8c8c98"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/passEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifre (minimum 6 karakter)"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:background="#333242"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColorHint="#8c8c98"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/passctrlEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifre tekrar"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:background="#333242"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColorHint="#8c8c98"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/uyeol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="#57a4ff"
        android:onClick="signUp"
        android:text="KAYIT OL"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giriş Yap"
        android:textColor="#799df5"
        android:background="#2e2f41"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:onClick="loginBtn"/>


</LinearLayout>