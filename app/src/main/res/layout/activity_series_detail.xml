<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SeriesDetailActivity"
    android:background="#1a1a1a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/TitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Series Name"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:layout_marginLeft="25dp"/>

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                app:srcCompat="@android:drawable/btn_star_big_off"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_mapmode"/>
            <TextView
                android:id="@+id/ulkeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ULKE"
                android:textColor="#8c8c98"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#8c8c98"
                android:textSize="17sp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                app:srcCompat="@android:drawable/ic_menu_my_calendar"
                android:id="@+id/yÄ±lTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YIL"
                android:textColor="#8c8c98"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#8c8c98"
                android:textSize="17sp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/turTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUR"
                android:textColor="#8c8c98"
                android:textSize="15sp"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardBackgroundColor="#FFC107"
               app:cardCornerRadius="3dp"
               app:contentPadding="2dp"
               app:cardUseCompatPadding="true"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="20dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="3dp"
                       android:text="imdb:"
                       android:textColor="#090808"
                       android:textSize="16sp"
                       android:textStyle="bold" />

                   <TextView
                       android:id="@+id/imdbTv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#fff"
                       android:text="9.9"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       android:layout_marginLeft="3dp"
                       android:layout_marginRight="3dp"/>

               </LinearLayout>

           </android.support.v7.widget.CardView>


       </RelativeLayout>
        <TextView
            android:id="@+id/TopicTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konu"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#8c8c98"
            android:gravity="center"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#333242">

            <EditText
                android:id="@+id/yorumTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:hint="yorum ekle"
                android:textColorHint="#8c8c98"
                android:visibility="gone"
                android:background="#333242"
                android:padding="5dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:text="gonder"
                android:textColor="#fff"
                android:id="@+id/sendComment"
                android:onClick="commentBtn"
                android:visibility="gone"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cRecyclerView">
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>



</ScrollView>

